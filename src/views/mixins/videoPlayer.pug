mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        progress.videoPlayer__progress#jsProgress(value="0", min="0")
            span#jsProgressBar
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", value="0.5", step="0.1")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span
                    span#currentTime 00:00:00
                    span &nbsp/&nbsp
                    span#totalTime 00:00:00
                span#jsFullScreen
                    i.fas.fa-expand
